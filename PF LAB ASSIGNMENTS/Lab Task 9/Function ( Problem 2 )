#include <stdio.h>
int even_odd(int num) {
    return num % 2 == 0;
}

int main() {
    int num;
    
    printf("Enter a number: ");
    scanf("%d", &num);
    
    if (even_odd(num)) {
        printf("The number is even.\n");
    } else {
        printf("The number is odd.\n");
    }
    
    return 0;
}
