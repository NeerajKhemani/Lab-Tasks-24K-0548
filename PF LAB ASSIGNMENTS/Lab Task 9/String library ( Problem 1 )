#include <stdio.h>
#include <string.h>
int main() {
    char dest[100], source[100];
    int n;

    printf("Enter the destination string: ");
    scanf("%s", dest);

    printf("Enter the source string: ");
    scanf("%s", source);

    printf("Enter the number of characters to append: ");
    scanf("%d", &n);

    strncat(dest, source, n);

    printf("The new concatenated string is: %s\n", dest);

    return 0;
}
