printf("Enter number for corresponding day:");
scanf("%d",&w);
printf("Enter 1 if on Vacation otherwise enter 0:");
scanf("%d",&v);
if (v>1 || v<0){
       printf("Invalid Input");
}
switch(w){
case 1:
(v==1)?printf("True"):printf("False");
break;
case 2:
(v==1)?printf("True"):printf("False");
break;
case 3:
(v==1)?printf("True"):printf("False");
break;
case 4:
(v==1)?printf("True"):printf("False");
break;
case 5:
(v==1)?printf("True"):printf("False");
break;
case 6:
printf("True");
break;
case 7:
printf("True");
break;
default:
