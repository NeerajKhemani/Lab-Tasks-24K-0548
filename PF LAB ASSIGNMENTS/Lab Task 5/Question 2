#include <stdio.h>
int main(){
int w,v;
printf("Should we sleep in");
printf("Note: Enter 1 for Monday 
                    2 for Tuesday 
                    3 for Wednesday 
                    4 for Thursday 
                    5 for Friday 
                    6 for Saturday 
                    7 for Sunday");
printf("Enter the Corresponding number for the day of Week:");
scanf("%d",&w);
printf("Enter 1 if on Vacation otherwise enter 0:");
scanf("%d",&v);
if (v>1 || v<0){
       printf("Invalid Input");
}
switch(w){
case 1:
(v==1)?printf("True"):printf("False");
break;
case 2:
(v==1)?printf("True"):printf("False");
break;
case 3:
(v==1)?printf("True"):printf("False");
break;
case 4:
(v==1)?printf("True"):printf("False");
break;
case 5:
(v==1)?printf("True"):printf("False");
break;
case 6:
printf("True");
break;
case 7:
printf("True");
break;
default:
printf("Invalid Input");
}
  return 0;
}
