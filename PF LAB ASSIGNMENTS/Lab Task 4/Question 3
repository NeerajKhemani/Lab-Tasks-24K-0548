#include <stdio.h>
int main() {
float a,b,c;
char o;
printf("Enter first number:");
scanf("%f",&a);
printf("Enter second number:");
scanf("%f",&b);
printf("Enter operator:");
scanf("%c",&o);
switch(o){
	case '+':
		c=a+b;
	break;
	case '-':
		c=a-b;
	break;
	case '*':
		c=a*b;
	break;
	case '/':
		if(b==0){
			printf("Mathematical error");
		}
	  else
	    c=a/b;
	break;
  default:
    	printf("Invalid operator")	
   }
	printf("Result=%.2f,c")

    return 0;
}
