#include <stdio.h>
int main() {
float a,b,c;
char o;
printf("Enter first number:");
scanf("%f",&a);
printf("Enter second number:");
scanf("%f",&b);
printf("Enter operator:");
scanf(" %c",&o);
c=0;
switch(o){
	case '+':
		c=a+b;
	break;
	case '-':
		c=a-b;
	break;
	case '*':
		c=a*b;
	break;
	case '/':
		if(b==0){
			printf("Error: Division by 0");
		}
	  else
	    c=a/b;
	break;
        default:
    	printf("Invalid operator");	
   }
	printf("Result=%.2f,c");

    return 0;
}
